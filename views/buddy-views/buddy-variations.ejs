<h2> MY FitBuddy Matches</h2>

<ul>
  <%  listOfUsers.forEach((oneUser) => { %>
      <li>
        <h3> <%= oneUser.name %> </h3>
        <a href="/messages/<%=oneUser._id %>"> Message this user </a>
        <p> My Current Fit Goals : <%= oneUser.fitness_goals %> </p>
        <p> My Fitness Level: <%= oneUser.fitness_level %></p>
        <p> I workout: <%= oneUser.availability_days %></p>
        <p> At these times: <%= oneUser.availability_time %> </p>
        <p> I live here: <%= oneUser.location %> </p>
        <p> Member Since: <time> <%= oneUser.createdAt %>  </time></p>
      </li>
  <%  }) %>
</ul>

<br><br>
<%  listOfUsers.forEach((oneUser) => { %>
<div class="container-fluid well span6">
	<div class="row-fluid">
